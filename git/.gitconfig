[user]
	name = Masahiro Sano
	email = sabottenda@gmail.com
[alias]
	st = status -s -b
	sti = status -s -b --ignored
	diffc = diff --cached
	diffcw = diff --cached --word-diff
	diffwc = diff --cached --word-diff
	diffw = diff --word-diff
	last = diff @^..@
	lastt = diff @^^..@
	lasttt = diff @^^^..@
	# logをtree表示
	hist = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
	log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
	# branch
	br = branch -a
	# log
	ls = log --stat
	lp = log -p              # diffも一緒に出す
	la = log --pretty='format:%ad %h (%an): %s' --date=short  # ざっくりログ出す
	co = checkout
	today = log --oneline --since='24 hour ago'
[core]
	excludesfile = ~/.gitignore
	pager = less
[color]
	ui = auto
[commit]
	cleanup = whitespace
[push]
	default = simple
